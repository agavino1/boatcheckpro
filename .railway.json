{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "npm run build && npm start",
    "restartPolicyMaxRetries": 5,
    "restartPolicyMaxRetryDelay": 300
  },
  "healthcheck": {
    "path": "/",
    "interval": 30,
    "timeout": 10
  },
  "ports": [
    {
      "name": "http",
      "port": 3000,
      "protocol": "http"
    }
  ]
}
