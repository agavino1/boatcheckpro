{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfile": "./Dockerfile"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyMaxRetries": 5,
    "restartPolicyMaxRetryDelay": 300
  },
  "healthcheck": {
    "path": "/health",
    "interval": 30,
    "timeout": 10
  },
  "ports": [
    {
      "name": "http",
      "port": 5000,
      "protocol": "http"
    }
  ]
}
